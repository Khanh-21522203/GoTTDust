# .env.example

# Server
TTDUST_BIND_ADDRESS=0.0.0.0:8080
TTDUST_GRPC_ADDRESS=0.0.0.0:9090
TTDUST_LOG_LEVEL=info
TTDUST_LOG_FORMAT=json

# PostgreSQL
TTDUST_PG_HOST=localhost
TTDUST_PG_PORT=5432
TTDUST_PG_DATABASE=ttdust
TTDUST_PG_USER=ttdust
TTDUST_PG_PASSWORD=changeme

# Redis
TTDUST_REDIS_URL=redis://localhost:6379

# S3
TTDUST_S3_ENDPOINT=http://localhost:9000
TTDUST_S3_BUCKET=ttdust-data
TTDUST_S3_ACCESS_KEY=minioadmin
TTDUST_S3_SECRET_KEY=minioadmin
TTDUST_S3_REGION=us-east-1

# WAL
TTDUST_WAL_DIRECTORY=/var/lib/ttdust/wal

# Graceful shutdown
TTDUST_SHUTDOWN_TIMEOUT=30

# JWT (optional)
TTDUST_JWT_PUBLIC_KEY_PATH=
TTDUST_JWT_ISSUER=ttdust
TTDUST_JWT_AUDIENCE=ttdust-api

# Observability (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=ttdust
